{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:react/recommended", "airbnb"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "no-unused-vars": "error",
        "no-undef": "error",
        "no-fallthrough": "error",
        "no-extra-bind": "error",
        "no-implicit-globals": "error",
        "no-invalid-this": "error",
        "complexity": ["warn", 10],
        "max-depth": ["warn", 4],
        "max-len": ["warn", 100],
        "no-console": "error",
        "no-lone-blocks": "error",
        "no-restricted-syntax": "error",
        "no-unreachable": "error",
        "prefer-const": "warn",
        "prefer-template": "warn",
        "jsx-quotes": ["error", "prefer-double"],
        "react/destructuring-assignment": "error",
        "react/jsx-boolean-value": "error",
        "react/jsx-curly-brace-presence": "error",
        "react/jsx-equals-spacing": "error",
        "react/jsx-filename-extension": "error",
        "react/jsx-indent": "error",
        "react/jsx-indent-props": "error",
        "react/jsx-key": "error",
        "react/jsx-max-props-per-line": "error",
        "react/jsx-no-bind": "error",
        "react/jsx-no-comment-textnodes": "error",
        "react/jsx-no-duplicate-props": "error",
        "react/jsx-no-target-blank": "error",
        "react/jsx-no-undef": "error",
        "react/jsx-pascal-case": "error",
        "react/jsx-sort-props": "error",
        "react/jsx-tag-spacing": "error",
        "react/jsx-uses-react": "error",
        "react/no-direct-mutation-state": "error",
        "react/no-render-return-value": "error",
        "react/no-unknown-property": "error",
        "react/no-unused-prop-types": "error",
        "react/no-unused-state": "error",
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "consistent-return": "off",
        "import/prefer-default-export": "off",
        "react/jsx-props-no-spreading": "off",
        "class-methods-use-this": "off",
        "no-restricted-exports": "off",
        "no-plusplus": "off",
        "default-param-last": "off",
        "no-nested-ternary": "off",
        "react/jsx-fragments": ["error", "syntax"],
        "func-style": [
            "error",
            "declaration",
            {
                "allowArrowFunctions": true
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": true,
                "ignorePropertyModificationsFor": ["state", "event"]
            }
        ],
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true,
                "allowTernary": true,
                "allowTaggedTemplates": true
            }
        ],
        "react/function-component-definition": [
            "error",
            {
                "namedComponents": ["arrow-function", "function-expression"],
                "unnamedComponents": ["arrow-function", "function-expression"]
            }
        ],
        "camelcase": [
            "error",
            {
                "properties": "always",
                "ignoreDestructuring": true,
                "allow": ["_id", "__typename"]
            }
        ],
        "import/no-default-export": "error", // Enforce all exports to be named
        "import/named": "error" // Ensure named imports correspond to a named export in the remote file
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
